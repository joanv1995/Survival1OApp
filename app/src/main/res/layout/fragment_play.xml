<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mapabcninit"
    tools:context="com.example.usuario.pruebaretrofit.activities.FragmentsPerfil.PlayFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/nivel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/nivelbutton"
            android:text="Nivel 1" />

        <Button
            android:id="@+id/nivel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_toEndOf="@+id/nivel1"
            android:background="@drawable/nivelbutton"
            android:text="Nivel 2" />

        <Button
            android:id="@+id/nivel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nivel1"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="90dp"
            android:layout_toEndOf="@+id/nivel2"
            android:background="@drawable/nivelbutton"
            android:text="Nivel 3" />

        <Button
            android:id="@+id/nivel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/nivelbutton"
            android:text="Nivel 4" />

        <Button
            android:id="@+id/nivel5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/nivel6"
            android:layout_marginStart="16dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/nivel2"
            android:background="@drawable/nivelbutton"
            android:text="Nivel 5" />

        <Button
            android:id="@+id/nivel6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/nivel1"
            android:layout_marginBottom="63dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/nivelbutton"
            android:text="Nivel 6" />

    </RelativeLayout>


</FrameLayout>
